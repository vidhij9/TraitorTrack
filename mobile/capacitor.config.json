{
  "appId": "com.tracetrack.app",
  "appName": "TraceTrack",
  "webDir": ".",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#1e7a3d",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "spinnerColor": "#78c289",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "Camera": {
      "promptLabelHeader": "Camera Access",
      "promptLabelText": "Please allow TraceTrack to access your camera to scan QR codes"
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    }
  }
}