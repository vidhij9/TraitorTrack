modules = ["python-3.11", "web", "nodejs-20", "bash", "python3", "postgresql-16"]
run = "python main.py"

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "chromium", "cyrus_sasl", "freetype", "gitFull", "glibcLocales", "libev", "libiconv", "libmemcached", "librsvg", "libxcrypt", "memcached", "nodejs", "openssl", "playwright-driver", "postgresql", "redis", "rustc", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "./deploy.sh"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000
exposeLocalhost = true

[agent]
integrations = ["python_sendgrid:1.0.0"]
