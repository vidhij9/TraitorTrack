# Development Dockerfile for TraceTrack
FROM python:3.11-slim

# Install development and runtime dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    vim \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create development user
RUN useradd --create-home --shell /bin/bash --uid 1000 dev
WORKDIR /app

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir flask-shell-ipython ipython watchdog

# Set development environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=development
ENV FLASK_DEBUG=1

# Switch to development user
USER dev

# Expose port
EXPOSE 5000

# Development command with auto-reload
CMD ["gunicorn", "--reload", "--bind", "0.0.0.0:5000", "--workers", "1", "--timeout", "60", "main:app"]