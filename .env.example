# TraceTrack Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DATABASE_URL=postgresql://tracetrack_user:tracetrack_password@localhost:5432/tracetrack_db

# Session Security (REQUIRED - Generate a strong secret key)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Application Configuration
FLASK_ENV=production
ENVIRONMENT=production

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# SendGrid Configuration (Optional - for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourtracetrack.com

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# RDS Configuration (for AWS deployment)
RDS_HOSTNAME=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=5432
RDS_DB_NAME=tracetrack
RDS_USERNAME=tracetrack_user
RDS_PASSWORD=your-secure-rds-password

# Application Settings
DEBUG=false
TESTING=false
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60

# Security Settings
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax