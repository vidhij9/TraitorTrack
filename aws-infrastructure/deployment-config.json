{
  "deployment": {
    "environment": "production",
    "region": "us-east-1",
    "app_name": "tracetrack",
    "target_completion": "2025-09-30"
  },
  "infrastructure": {
    "compute": {
      "ecs_fargate": {
        "task_cpu": "512",
        "task_memory": "1024",
        "min_capacity": 2,
        "max_capacity": 20,
        "target_cpu_utilization": 70
      },
      "auto_scaling": {
        "scale_out_cooldown": 300,
        "scale_in_cooldown": 300,
        "cpu_threshold": 70
      }
    },
    "database": {
      "rds_postgresql": {
        "instance_class": "db.t3.medium",
        "allocated_storage": 100,
        "storage_type": "gp3",
        "multi_az": true,
        "backup_retention": 7,
        "performance_insights": true,
        "encryption": true
      }
    },
    "caching": {
      "elasticache_redis": {
        "node_type": "cache.t3.micro",
        "num_cache_clusters": 2,
        "engine_version": "7.0",
        "multi_az": true,
        "encryption_at_rest": true
      }
    },
    "networking": {
      "vpc_cidr": "10.0.0.0/16",
      "availability_zones": 2,
      "nat_gateways": 1,
      "load_balancer": "application"
    },
    "cdn": {
      "cloudfront": {
        "price_class": "PriceClass_100",
        "http_version": "http2",
        "ipv6_enabled": true,
        "static_cache_ttl": 31536000,
        "api_cache_ttl": 30
      }
    }
  },
  "monitoring": {
    "cloudwatch": {
      "log_retention_days": 7,
      "container_insights": true,
      "custom_metrics": true
    },
    "xray": {
      "tracing_enabled": true,
      "sampling_rate": 0.1
    },
    "health_checks": {
      "health_endpoint": "/health",
      "ready_endpoint": "/ready",
      "live_endpoint": "/live"
    }
  },
  "performance_targets": {
    "response_time": {
      "average": "< 50ms",
      "p95": "< 100ms",
      "p99": "< 200ms"
    },
    "throughput": {
      "requests_per_second": "> 500",
      "concurrent_users": "> 500"
    },
    "availability": {
      "uptime": "99.9%",
      "error_rate": "< 0.1%"
    },
    "scalability": {
      "auto_scaling_trigger": "70% CPU",
      "max_instances": 20,
      "cache_hit_rate": "> 90%"
    }
  },
  "migration_strategy": {
    "deployment_type": "blue_green",
    "rollback_capability": true,
    "zero_downtime": true,
    "dns_cutover": "gradual",
    "testing_phases": [
      "infrastructure_validation",
      "application_deployment",
      "performance_testing",
      "load_testing",
      "production_cutover"
    ]
  },
  "cost_optimization": {
    "fargate_spot": {
      "enabled": true,
      "spot_percentage": 80
    },
    "storage_optimization": {
      "gp3_volumes": true,
      "log_retention": "7_days"
    },
    "cdn_optimization": {
      "compression": true,
      "edge_locations": "us_only"
    }
  }
}